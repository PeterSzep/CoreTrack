<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/big_gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="35sp"
        android:textColor="@color/white"
        />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/stepCircularBar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cpb_background_progressbar_color="@color/white"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="@color/yellowOrange"
        app:cpb_round_border="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="80dp"
         />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/stepCircularBar"
        app:layout_constraintStart_toStartOf="@id/stepCircularBar"
        app:layout_constraintEnd_toEndOf="@id/stepCircularBar"
        app:layout_constraintBottom_toBottomOf="@id/stepCircularBar"
        android:src="@drawable/baseline_directions_run_24"
        />

    <TextView
        android:id="@+id/stepsTextview"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/stepCircularBar"
        app:layout_constraintStart_toStartOf="@id/stepCircularBar"
        app:layout_constraintEnd_toEndOf="@id/stepCircularBar"
        android:layout_marginBottom="-70dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/caloriesImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:src="@drawable/fire_icon"
        app:layout_constraintBottom_toBottomOf="@id/caloriesTextView"
        app:layout_constraintStart_toStartOf="@id/caloriesTextView"
        app:layout_constraintEnd_toEndOf="@id/caloriesTextView"
        app:layout_constraintTop_toTopOf="@id/caloriesTextView"
        android:layout_marginTop="-170dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/caloriesTextView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/stepsTextview"
        app:layout_constraintTop_toBottomOf="@id/stepsTextview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/kilometersTextViewImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:src="@drawable/marker_icon"
        app:layout_constraintBottom_toBottomOf="@id/kilometersTextView"
        app:layout_constraintStart_toStartOf="@id/kilometersTextView"
        app:layout_constraintEnd_toEndOf="@id/kilometersTextView"
        app:layout_constraintTop_toTopOf="@id/caloriesTextView"
        android:layout_marginTop="-170dp"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/kilometersTextView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/stepsTextview"
        app:layout_constraintTop_toBottomOf="@id/stepsTextview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        />




</androidx.constraintlayout.widget.ConstraintLayout>